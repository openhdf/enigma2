<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<skin>
	<windowstyle id="1" type="skinned">
		<color color="#000000" name="Background"/>
		<color color="#ffffff" name="LabelForeground"/>
		<color color="#000000" name="ListboxBackground"/>
		<color color="#ffffff" name="ListboxForeground"/>
		<color color="#000000" name="ListboxSelectedBackground"/>
		<color color="#ffffff" name="ListboxSelectedForeground"/>
		<color color="#000000" name="ListboxMarkedBackground"/>
		<color color="#ffffff" name="ListboxMarkedForeground"/>
		<color color="#000000" name="ListboxMarkedAndSelectedBackground"/>
		<color color="#ffffff" name="ListboxMarkedAndSelectedForeground"/>
		<color color="#ffffff" name="WindowTitleForeground"/>
		<color color="#000000" name="WindowTitleBackground"/>
	</windowstyle>
	<fonts>
		<!-- pick a funky name for the font, so we don't conflict  -->
		<font filename="nmsbd.ttf" name="FdLcD" scale="100"/>
	</fonts>

<!-- template -->
	<screen name="SummaryClockPanel">
		<widget source="global.CurrentTime" render="Label" position="center,center" size="100,45" font="FdLcD;40" halign="right" valign="bottom" noWrap="1">
			<convert type="ClockToText"></convert>
		</widget>
	</screen>

<!-- main-->
	<screen name="InfoBarSummary" position="0,0" size="400,240">
		<widget source="session.CurrentService" position="3,3" transparent="1" zPosition="8" size="160,160" render="Label" font="Meteo; 125" halign="center" valign="center" foregroundColor="XionMeteoFont" backgroundColor="XionBackground" noWrap="1">
			<convert  type="XionHDFWeather">Day_0,MeteoFont</convert>
		</widget>
		<widget backgroundColor="XionBackground" font="FdLcD; 46" foregroundColor="XionFont1" render="Label" position="10,170" size="388,58" source="session.CurrentService" halign="center" transparent="1" zPosition="8" valign="center">
			<convert type="XionHDFWeather">Day_0,Description</convert>
		</widget>
		<widget noWrap="1" backgroundColor="XionBackground" font="FdLcD; 75" foregroundColor="XionFont1" render="Label" position="268,10" size="120,100" source="session.CurrentService" zPosition="8" halign="right" transparent="1">
			<convert type="XionHDFWeather">Day_0,MaxTemp</convert>
		</widget>
		<widget noWrap="1" backgroundColor="XionBackground" font="FdLcD; 75" foregroundColor="XionFont1" render="Label" position="268,85" size="120,100" source="session.CurrentService" zPosition="8" halign="right" transparent="1">
			<convert type="XionHDFWeather">Day_0,MinTemp</convert>
		</widget>
		<ePixmap pixmap="/usr/share/enigma2/display/weather_lcd.png" position="0,0" size="400,240" zPosition="-9" />
	</screen>

<!-- standby -->
	<screen name="StandbySummary" position="0,0" size="400,240">
		<widget source="session.CurrentService" position="3,3" transparent="1" zPosition="8" size="160,160" render="Label" font="Meteo; 125" halign="center" valign="center" foregroundColor="XionMeteoFont" backgroundColor="XionBackground" noWrap="1">
			<convert  type="XionHDFWeather">Day_0,MeteoFont</convert>
		</widget>
		<widget backgroundColor="XionBackground" font="FdLcD; 46" foregroundColor="XionFont1" render="Label" position="10,170" size="388,58" source="session.CurrentService" halign="center" transparent="1" zPosition="8" valign="center">
			<convert type="XionHDFWeather">Day_0,Description</convert>
		</widget>
		<widget noWrap="1" backgroundColor="XionBackground" font="FdLcD; 75" foregroundColor="XionFont1" render="Label" position="268,10" size="120,100" source="session.CurrentService" zPosition="8" halign="right" transparent="1">
			<convert type="XionHDFWeather">Day_0,MaxTemp</convert>
		</widget>
		<widget noWrap="1" backgroundColor="XionBackground" font="FdLcD; 75" foregroundColor="XionFont1" render="Label" position="268,85" size="120,100" source="session.CurrentService" zPosition="8" halign="right" transparent="1">
			<convert type="XionHDFWeather">Day_0,MinTemp</convert>
		</widget>
	</screen>

	<include filename="/usr/share/enigma2/display/skin_display.xml" />
</skin>
